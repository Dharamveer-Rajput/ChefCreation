<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/media_card_view"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/image_name"
        android:id="@+id/linearLayout2">
    <TextView
        android:id="@+id/txtItemName"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="10dp"
         />

    <TextView
        android:id="@+id/txtWishlistDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteY="44dp"
        tools:layout_editor_absoluteX="10dp"
        />

    <TextView

        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="10dp"
         />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:layout_editor_absoluteY="91dp"
        tools:layout_editor_absoluteX="10dp"
        />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_name"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/heartImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/accountred"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout2" />

    <ImageView
        android:id="@+id/heartImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/heartred"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>