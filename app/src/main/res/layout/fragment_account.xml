<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/media_card_view"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_weight="1"
    android:weightSum="15"
    android:gravity="center"
    android:padding="5dp">


    <TextView
        android:id="@+id/textViewaccountFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_weight="0.5"
        android:singleLine="true"
        android:padding="10dp"
        android:textColorHint="@color/black"/>

    <TextView
            android:id="@+id/textViewaccountLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
        android:layout_weight="0.5"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/black"/>

     <TextView
            android:id="@+id/textViewaccountEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
         android:layout_weight="0.5"
         android:textSize="30dp"
         android:textColor="@color/black"
         android:padding="10dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/black" />



        <TextView
            android:id="@+id/textViewaccountFoodie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Foodie No."
            android:layout_weight="0.5"
            android:singleLine="true"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="text"
            android:padding="10dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="4"
        android:layout_margin="20dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/startdialog"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:text="Edit"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btnorder"
            />
        <!--<Button-->
             <!--android:layout_width="400dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_weight="2"-->
            <!--android:textSize="20dp"-->
            <!--android:text="Save"-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_margin="10dp"-->
            <!--android:background="@drawable/btnorder"-->
            />
    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>